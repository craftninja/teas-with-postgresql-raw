extends ../layout

block content

  div(class="page-header")
    a(href="/teas/new" class="btn btn-success pull-right") Add Tea
    h1 Check out my freaking awesome tea collection!

  table(class="table")
    thead
      th Name
      th Country of Origin
      th Type
      th Ounces Available
      th Reorderable?
    tbody
      each tea in teas
        tr
          td= tea.name
          td= tea.country_of_origin
          td= tea.type
          td= tea.oz
          td= tea.reorderable ? "Yes" : "No"
